import sys
import os 
import pynotify
import re

pynotify.init("ubi")
comand = sys.argv[1:]
enter = ' '.join(comand)
enter = enter.lower()

# notify-send -i /usr/bin/ubi.svg 'Este parece o Ã­cone...'
# show|me|whats|what|is|my|    

def fun (x):
    if x == 'hi' or 'hello':
        os.system("finger `whoami` | sed 's/.*: *//;q' > log/log.txt")
        a = open ("log/log.txt", "r")
        b = a.read()
        c = 'Hi, '
        d = c + b
        a.close()
        os.system("rm log/log.txt")
        notify = pynotify.Notification( d , "", "/usr/bin/ubi.svg")
        notify.show()
    elif x == 'i love you' or 'love you' or 'love u':
        notify = pynotify.Notification("")
        notify.show()
              
        
def user (x):
    if x == "qual meu nome": 
        nome ="finger `whoami` | sed 's/.*: *//;q'"
        os.system("finger `whoami` | sed 's/.*: *//;q' > log/log.txt")
        a = open ("log/log.txt", "r")
        b = a.read()
        c = 'Your name is, '
        d = c + b
        a.close()
        notify = pynotify.Notification( d , " ", "/usr/bin/ubi.svg")
        notify.show()

        
        
        
    
    
fun(enter)
user(enter)
