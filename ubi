import sys
import os 
import pynotify

pynotify.init("ubi")
comand = sys.argv[1:]
enter = ' '.join(comand)

def resposta (x):
    if x == 'ola':
        print ""
        notify = pynotify.Notification("Ol√° Edilson!", "", "/usr/bin/ubi.svg")
        notify.show()
    elif x == 'eu te amo':
        print ""
        notify = pynotify.Notification("")
        notify.show()
        
resposta(enter)
